{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$web/assets": ["apps/web/src/assets"],
      "$web/assets/*": ["apps/web/src/assets/*"],
      "$web/base": ["apps/web/src/base"],
      "$web/base/*": ["apps/web/src/base/*"],
      "$web/components": ["apps/web/src/lib/components"],
      "$web/components/*": ["apps/web/src/lib/components/*"],
      "$web/hooks": ["apps/web/src/lib/hooks"],
      "$web/hooks/*": ["apps/web/src/lib/hooks/*"],
      "$web/util": ["apps/web/src/lib/util"],
      "$web/util/*": ["apps/web/src/lib/util/*"],
      "$web/views": ["apps/web/src/views"],
      "$web/views/*": ["apps/web/src/views/*"],
      "@the-secret-store/api-interfaces/*": ["libs/api-interfaces/src/*"],
      "@the-secret-store/util": ["libs/util/src"],
      "@the-secret-store/util/*": ["libs/util/src/*"],
      "$cli/services": ["apps/cli/src/lib/services"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
